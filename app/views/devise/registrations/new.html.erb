<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="last_name_field">
    <%= f.label :"(姓)" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="first_name_field">
    <%= f.label :"(名)" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="last_name_kana_field">
    <%= f.label :"(セイ)" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name" %>
  </div>

   <div class="first_name_kana_field">
    <%= f.label :"(メイ)" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号" %><br />
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
  </div>

  <div class="field">
    <%= f.label :"住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

   <div class="field">
    <%= f.label :"電話番号" %><br />
    <%= f.text_field :phonenumber, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<div>
  <h5>既に登録済みの方</h5>
  <p>
    <%= link_to "こちら", customer_session_path %>からログインしてください。
  </p>
</div>

